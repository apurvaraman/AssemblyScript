{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "../out/",
    "typeRoots": [ "../node_modules", "../node_modules/@types" ],
    "types": [ "node", "long" ],
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": false,
    "allowJs": false,
    "declaration": true
  },
  "include": [
    "./**/*.ts"
  ]
}
